<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:text="@string/btn_remove_friend"
        android:id="@+id/removeMyFriend"
        android:background="@drawable/round_button"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/myFriendName"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/removeMyFriend"
        android:layout_centerVertical="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:background="@color/purple"
        android:textColor="@color/white"
        android:text="@string/btn_get_friends_location"
        android:id="@+id/getFriendLocation"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/getFriendLocationProgress"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:visibility="gone" />
</RelativeLayout>